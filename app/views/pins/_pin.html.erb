<div class="box">
	<%= link_to (image_tag pin.image(:medium)), pin %>
	<p class="description">
		<%= pin.description %>
	</p>

	<p>
		<strong>
			Posted by <%= link_to pin.user.name, pin.user unless pin.user.nil? %>
		</strong>
	</p>
	<p> Tags: <%= raw pin.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')  %>
	</p>

	<% if current_user == pin.user %>
	      <p>
		      <%= link_to 'Edit', edit_pin_path(pin) %>
		      <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
		      
		     
				</p>
	<% end %>


	
</div>

